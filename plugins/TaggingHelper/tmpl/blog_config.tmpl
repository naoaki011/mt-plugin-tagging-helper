<mtapp:setting id="load_blogs" label="<__trans phrase="Tags Load From:">">
    <input type="radio" name="load_blogs" value="1"<mt:if name="load_blogs" eq="1"> checked="checked"</mt:if> />
    &nbsp;<__trans phrase="All">&nbsp;
    <input type="radio" name="load_blogs" value="2"<mt:if name="load_blogs" eq="2"> checked="checked"</mt:if> />
    &nbsp;<__trans phrase="Sibling">&nbsp;
    <input type="radio" name="load_blogs" value="0"<mt:unless name="load_blogs"> checked="checked"</mt:unless> />
    &nbsp;<__trans phrase="Blog">&nbsp;
</mtapp:setting>
<mtapp:setting id="datasources" label="<__trans phrase="Tags Load By:">">
    <input type="checkbox" name="page_tags" value="1"<mt:if name="page_tags"> checked="checked"</mt:if> />
    &nbsp;<__trans phrase="Page Tags">&nbsp;
    <input type="checkbox" name="asset_tags" value="1"<mt:if name="asset_tags"> checked="checked"</mt:if> />
    &nbsp;<__trans phrase="Asset Tags">&nbsp;
</mtapp:setting>
<mtapp:setting id="load_type" label="<__trans phrase="Tags Load Except For:">">
    <input type="checkbox" name="disable_entry" value="1"<mt:if name="disable_entry"> checked="checked"</mt:if> />
    &nbsp;<__trans phrase="Except Entry">&nbsp;
    <input type="checkbox" name="disable_page" value="1"<mt:if name="disable_page"> checked="checked"</mt:if> />
    &nbsp;<__trans phrase="Except Page">&nbsp;
</mtapp:setting>
<mtapp:setting id="load_type" label="<__trans phrase="Tags Load For:">">
    <input type="checkbox" name="enable_asset" value="1"<mt:if name="enable_asset"> checked="checked"</mt:if> />
    &nbsp;<__trans phrase="Asset">&nbsp;
</mtapp:setting>
